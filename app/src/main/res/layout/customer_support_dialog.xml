<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <!-- Customer Support Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Support"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Phone Number for Contact -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Phone: +1-800-123-456"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp" />

    <!-- Email for Contact -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Email: support@company.com"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <!-- Customer Feedback Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Feedback"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp" />

    <!-- Feedback Textbox -->
    <EditText
        android:id="@+id/feedbackInput"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Enter your feedback here"
        android:background="@android:drawable/edit_text"
        android:gravity="top"
        android:textColorHint="@color/black"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitFeedbackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF0000"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_gravity="center" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelFeedbackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF0000"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />
</LinearLayout>
