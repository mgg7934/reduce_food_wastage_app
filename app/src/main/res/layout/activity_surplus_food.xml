<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Image of the Ingredient -->
                <ImageView
                    android:id="@+id/imageViewIngredient"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gradient_background" /> <!-- Replace with ingredient image -->

                <!-- Ingredient Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title of the Ingredient -->
                    <TextView
                        android:id="@+id/textViewIngredientTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomatoes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Number Available -->
                    <TextView
                        android:id="@+id/textViewAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available: 10"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp" />

                    <!-- Cost -->
                    <TextView
                        android:id="@+id/textViewCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost: $5.00"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Add to Cart Button -->
                <Button
                    android:id="@+id/buttonAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#4CAF50" /> <!-- Green background for add to cart -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Repeat for more CardViews -->

        <!-- Second CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Image of the Ingredient -->
                <ImageView
                    android:id="@+id/imageViewIngredient2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gradient_background" /> <!-- Replace with ingredient image -->

                <!-- Ingredient Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title of the Ingredient -->
                    <TextView
                        android:id="@+id/textViewIngredientTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carrots"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Number Available -->
                    <TextView
                        android:id="@+id/textViewAvailable2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available: 15"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp" />

                    <!-- Cost -->
                    <TextView
                        android:id="@+id/textViewCost2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost: $3.00"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Add to Cart Button -->
                <Button
                    android:id="@+id/buttonAddToCart2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#4CAF50" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Third CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Image of the Ingredient -->
                <ImageView
                    android:id="@+id/imageViewIngredient3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gradient_background" /> <!-- Replace with ingredient image -->

                <!-- Ingredient Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title of the Ingredient -->
                    <TextView
                        android:id="@+id/textViewIngredientTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Onions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Number Available -->
                    <TextView
                        android:id="@+id/textViewAvailable3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available: 20"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp" />

                    <!-- Cost -->
                    <TextView
                        android:id="@+id/textViewCost3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost: $2.00"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Add to Cart Button -->
                <Button
                    android:id="@+id/buttonAddToCart3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#4CAF50" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
